{
  "name": "mern-root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "",
  "scripts": {
    "install:all": "concurrently \"npm run install:server\" \"npm run install:client\"",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "build": "cd client && npm run build",
    "dev:all-con": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:all-server": "concurrently \"npm run dev:server\" \"npm run watch:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "watch:client": "cd client && vite build --watch",
    "start:all": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm run start",
    "start:client": "cd client && npm run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
